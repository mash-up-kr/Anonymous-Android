<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle.ToolBar" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Normal18" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Normal16" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Normal14" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Normal12" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextStyle.Chip" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/purple_01</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextStyle.BottomMenuText" parent="@android:style/Widget.TextView">
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/border_radius_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyle.purple" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/purple_01</item>
        <item name="android:textCursorDrawable">@color/purple_01</item>
        <item name="android:textColorHint">@color/gray_02</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTheme</item>
        <item name="tabIndicator">@drawable/border_radius_10_white</item>
    </style>

    <style name="TabTheme" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TransparentBottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetDialog</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
